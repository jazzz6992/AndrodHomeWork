<?xml version="1.0" encoding="utf-8"?>
<layout>
<data>

    <variable
        name="viewModel"
        type="com.vsevolodvisnevskij.homework.hw6.StockViewModel" />
</data>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stock_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.stockId}"/>

            <TextView
                android:id="@+id/stock_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.stockName}"/>

            <TextView
                android:id="@+id/stock_bid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.stockBid}"/>

            <TextView
                android:id="@+id/stock_min_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.stockMinPrice}"/>

            <TextView
                android:id="@+id/stock_max_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.stockMaxPrice}"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>